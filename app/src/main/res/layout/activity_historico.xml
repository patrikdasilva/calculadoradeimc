<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teladecalculo"
    tools:context=".HistoricoActivity">

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvImc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="102dp"
        android:background="@drawable/btn_custom"
        android:cursorVisible="false"
        android:fontFamily="times new roman"
        android:onClick="onClickDeletar"
        android:text="Limpar Lista"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/lvImc"
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="102dp"
        android:backgroundTint="@android:color/background_light"
        android:backgroundTintMode="screen"
        android:cacheColorHint="@android:color/background_light"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="134dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="times new roman"
        android:text="Lista de imcs"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvImc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/btn_custom"
        android:cursorVisible="false"
        android:fontFamily="times new roman"
        android:onClick="onClickNovo"
        android:text="Novo"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />
</RelativeLayout>