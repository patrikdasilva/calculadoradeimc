<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teladecalculo"
    tools:context=".CalculoImcActivity">

    <EditText
        android:id="@+id/editPeso"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/campos_custom"
        android:ems="10"
        android:fontFamily="times new roman"
        android:hint="Digite seu peso"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00EAB3"
        android:textColorHint="@android:color/background_light"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="308dp" />

    <EditText
        android:id="@+id/editAltura"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/campos_custom"
        android:ems="10"
        android:fontFamily="times new roman"
        android:hint="Digite sua altura"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00EAB3"
        android:textColorHint="@android:color/background_light"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="308dp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editResultado"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/btn_custom"
        android:backgroundTintMode="src_in"
        android:fontFamily="times new roman"
        android:onClick="onClickSalvar"
        android:text="Calcular"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fontFamily="times new roman"
        android:text="CÃ¡lculo de imc"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editImc"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editAltura"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="times new roman"
        android:text="IMC"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/editResultado"
        android:layout_width="133dp"
        android:layout_height="47dp"
        android:layout_below="@+id/editImc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="times new roman"
        android:text="Resultado"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="326dp"
        android:background="@drawable/abc_vector_test"
        android:backgroundTint="@android:color/white"
        android:onClick="onClickVoltar" />

    <Button
        android:id="@+id/btnHistorico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCalcular"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/btn_custom"
        android:backgroundTintMode="src_in"
        android:fontFamily="times new roman"
        android:onClick="onClickAbrirHistorico"
        android:text="Historico"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />
</RelativeLayout>