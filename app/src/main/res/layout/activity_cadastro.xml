<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/teladecalculo"
        tools:context=".LoginActivity">

        <EditText
            android:id="@+id/editUsuario"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="147dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/campos_custom"
            android:ems="10"
            android:fontFamily="times new roman"
            android:hint="UsuÃ¡rio"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textColorHighlight="#00EAB3"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="#00EAB3"
            android:textCursorDrawable="@color/colorAccent"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="158dp" />

        <EditText
            android:id="@+id/editSenha"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editLogin"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/campos_custom"
            android:ems="10"
            android:fontFamily="times new roman"
            android:hint="Senha"
            android:inputType="textPassword"
            android:scrollbarThumbHorizontal="@android:color/background_light"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textColorHighlight="#00EAB3"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="#00EAB3"
            android:textCursorDrawable="@color/colorAccent"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editSenha"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/btn_custom"
            android:backgroundTintMode="src_in"
            android:fontFamily="times new roman"
            android:onClick="onClickSalvar"
            android:text="Cadastrar"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editUsuario"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/campos_custom"
            android:ems="10"
            android:fontFamily="times new roman"
            android:hint="Login"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textColorHighlight="#00EAB3"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="#00EAB3"
            android:textCursorDrawable="@color/colorAccent"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="327dp"
            android:background="@drawable/abc_vector_test"
            android:backgroundTint="@android:color/white"
            android:onClick="onClickVoltar" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="147dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="134dp"
            android:fontFamily="times new roman"
            android:text="Cadastro"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>